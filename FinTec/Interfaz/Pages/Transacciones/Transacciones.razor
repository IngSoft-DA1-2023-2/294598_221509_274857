                        else if (transaccion.CuentaMonetaria is Credito cuentaCreditoBanco)
                        {
                            <text>Banco: @cuentaCreditoBanco.BancoEmisor | Num: @cuentaCreditoBanco.NumeroTarjeta</text>
                        }
                    </td>
                    <td class="px-6 py-4">
                        @transaccion.CategoriaTransaccion.Nombre
                    </td>
                    <td class="px-6 py-4">
                        <button class="bg-blue-500 text-white text-xs font-medium px-2 py-1 rounded-lg hover:bg-blue-600 focus:ring-4 focus:outline-none focus:ring-blue-200 dark:focus:ring-blue-800 ml-2" @onclick="() => ModificarTransaccionIngreso(transaccion)">Modificar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



<p style="color:red">@ErrorMsg</p>


@code {
    [Parameter] public int Id { get; set; }
    [Parameter] public string Correo { get; set; }
    public string ErrorMsg { get; set; }


    private void ModificarTransaccionIngreso(Transaccion transaccion)
    {
        NavigationManager.NavigateTo($"/home/{Persistencia.Id}/{Persistencia.Correo}/{transaccion.IdTransaccion}/CrearTransaccionIngreso");
    }


    private void ModificarTransaccionCosto(Transaccion transaccion)
    {
        NavigationManager.NavigateTo($"/home/{Persistencia.Id}/{Persistencia.Correo}/{transaccion.IdTransaccion}/CrearTransaccionCosto");
    }


}