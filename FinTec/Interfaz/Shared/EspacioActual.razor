<div id="alert-additional-content-1" class="p-3 mb-4 text-blue-800 border border-blue-300 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-blue-400 dark:border-blue-800">
	<div class="flex items-center">
		<span class="sr-only">Info</span>
		<h3 class="text-lg font-medium">Principal (Nombre Usuario)</h3>
	</div>
	<div class="mt-2 mb-4 text-sm">
		Se encuentra en el espacio Principal (Nombre Usuario) en modo Administrador.
	</div>

	@if (mostrarInput)
	{
		<InputRegistro />
	}

	<div class="flex">
		<button type="button" class="text-white bg-gradient-to-br from-green-400 to-blue-600 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none
			focus:ring-green-200 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-1"
				@onclick="MostrarOcultarInput">
			Cambiar nombre
		</button>
	</div>
</div>

@code {
	private bool mostrarInput = false;

	private void MostrarOcultarInput()
	{
		mostrarInput = !mostrarInput;
	}
}
