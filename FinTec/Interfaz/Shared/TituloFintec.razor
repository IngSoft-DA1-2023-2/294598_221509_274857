<h1 class="mb-4 text-3xl font-extrabold text-gray-900 dark:text-white md:text-5xl lg:text-6xl">
	<span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">
		@TituloVerde
	</span> @TituloNegro
</h1>
<p class="text-lg font-normal text-gray-500 lg:text-xl dark:text-gray-400">@Subtitulo</p>


@code {
	[Parameter] public string? TituloVerde { get; set; }
	[Parameter] public string? TituloNegro { get; set; }
	[Parameter] public string? Subtitulo { get; set; }
}